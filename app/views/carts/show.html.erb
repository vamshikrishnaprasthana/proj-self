<h1>Items in Cart</h1>

<% @orderitems.each do |i| %>
   <p><%= i.product.name %></p>
   <p><%= i.product.price %></p>
   <p><%= i.product.description %></p>
   <p><%= i.product.rating %></p>
   <%= form_for i, remote: true do |f| %>
      <%= f.hidden_field :product_id, :value => i.product.id %>
      <%= f.number_field :quantity, :value => i.quantity.to_i %>
      <%= link_to "Remove Items", orderitem_path(i), method: :delete, remote: true%>
   <% end %>
   <h2>Subtotal: <%= i.total %></h2>

<% end %>
<%= " total_amount: #{current_order.subtotal}"%>
