<table>
  <thead>
    <tr>
      <th>Category of Product: </th>
      <th>Name: </th>
      <th>Price: </th>
      <th>Description: </th>
      <th>Rating: </th>
      <th>Add_to_cart: </th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |a| %>
      <tr>
        <td><%= a.category.name %></td>
        <td><%= a.name %></td>
        <td><%= a.price %></td>
        <td><%= a.description %></td>
        <td><%= a.rating %></td>
        <td>
          <%= form_for @orderitem, remote: true  do |f|%>
          <%= f.hidden_field :product_id, :value => a.id %>
          <%= f.number_field :quantity, :value => 1, :min =>  1%>
          <%= f.submit "Add to Cart "%>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
</table>
<%= link_to "#{current_order.orderitems.size} items with a value of #{current_order.subtotal }", carts_path%>
