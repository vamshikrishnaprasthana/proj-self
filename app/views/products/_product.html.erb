<table>
  <thead>
    <tr>
      <th>Category of Product: </th>
      <th>Name: </th>
      <th>Price: </th>
      <th>Description: </th>
      <th>Rating: </th>
      <th colspan="3"> Actions : </th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |a| %>
      <tr>
        <td><%= a.category.name %></td>
        <td><%= a.name %></td>
        <td><%= a.price %></td>
        <td><%= a.description %></td>
        <td><%= a.rating %></td>
        <td><%= link_to 'Show',product_path(a)%></td>
        <td>
              <% if current_user.role == 'admin' %>
                <%= link_to "Edit", edit_product_path(a) %>
                <%= link_to "Delete", product_path(a),method: :delete, data: {confirm: "Are you sure?"} %>
              <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
</table>
<% if current_user.role == 'admin' %>
  <p>
    <%= link_to 'create new product',new_product_path%><br>
  </p>
<% end %>
<%= link_to 'Add Products to cart',add_to_cart_carts_path %>
