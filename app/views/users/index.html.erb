<h1> Users listing page </h1>
<table>
  <thead>
    <tr>
      <th>Name: </th>
      <th>Email: </th>
      <th>Role: </th>
      <th colspan="3"> Actions : </th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |a| %>
      <tr>
        <td><%= a.name %></td>
        <td><%= a.email %></td>
        <td><%= a.role %></td>
        <td><%= link_to 'Show',user_path(a)%></td>
        <td>
              <%= link_to "Edit", edit_user_path(a) %>
              <%= link_to "Delete", user_path(a),method: :delete, data: {confirm: "Are you sure?"} %>
        </td>
      </tr>
      <% end %>
    </tbody>
</table>

<p>
  <%= link_to 'create new user',new_user_registration_path%>
</p>
